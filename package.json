{
  "private": true,
  "name": "vbuild-monorepo",
  "version": "0.0.0",
  "scripts": {
    "test": "lerna bootstrap && lerna run test && xo",
    "test:cov": "lerna bootstrap && cd packages/vbuild && npm run test:cov && xo"
  },
  "main": "index.js",
  "xo": {
    "esnext": true,
    "extends": "rem",
    "ignores": [
      "examples/**",
      "template/**",
      "packages/*/dist/**",
      "packages/*/example/**"
    ],
    "envs": [
      "jest"
    ],
    "rules": {
      "guard-for-in": 0,
      "import/no-dynamic-require": 0,
      "max-nested-callbacks": [
        "error",
        6
      ],
      "capitalized-comments": 0,
      "no-multi-assign": 0,
      "complexity": 0
    }
  },
  "repository": "git@github.com:egoist/vbuild.git",
  "author": "EGOIST <0x142857@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "eslint-config-rem": "^3.0.1",
    "lerna": "^2.0.0-rc.3",
    "xo": "^0.18.1"
  }
}
